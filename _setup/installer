#!/bin/bash

echo "Initializing fresh system install..." | tee -a $SETUP_LOG 2>&1

# Get distro for certain dependencies
detect_distro() {
  if [ -f /etc/os-release ]; then
    . /etc/os-release
    distro=$ID
  elif type lsb_release >/dev/null 2>&1; then
    distro=$(lsb_release -si | tr '[:upper:]' '[:lower:]')
  elif [ -f /etc/lsb-release ]; then
    . /etc/lsb-release
    distro=$DISTRIB_ID
  elif [ -f /etc/debian_version ]; then
    distro="debian"
  else
    distro=$(uname -s)
  fi
  echo $distro
}

# Source and export dependency vars and funcs for future subshells
DISTRO=$(detect_distro) && export DISTRO
SETUP_DIR=$HOME/.dotfiles/_setup && export SETUP_DIR
mkdir -p $HOME/.dotfiles/_setup/logs
SETUP_LOG=$HOME/.dotfiles/_setup/logs/setup.log && export SETUP_LOG
MARKER_DIR=$HOME/.dotfiles/_setup/markers && export MARKER_DIR
mkdir -p $MARKER_DIR

# Install zsh and basic dependencies first
echo "----- Installing zsh..."
case $DISTRO in
  ubuntu|debian|pop|mint|elementary)
    sudo apt update > $SETUP_LOG 2>&1 && apt install -y zsh curl wget unzip > $SETUP_LOG 2>&1
    ;;
  arch|manjaro)
    sudo pacman -Syu --noconfirm zsh curl wget unzip > $SETUP_LOG 2>&1
    ;;
  darwin)
    brew update > $SETUP_LOG 2>&1 && brew install zsh curl wget unzip > $SETUP_LOG 2>&1
    ;;
  *)
    echo "bruh why are you using this distro - install zsh,curl,wget,unzip manually" | tee -a $SETUP_LOG 2>&1
    return 1
    ;;
esac

PATH=/usr/bin:$PATH && export PATH
chsh -s $(which zsh)

# Install everything else within zsh for installer shell configs
sudo -E -u $SUDO_USER zsh << EOF
  for file in $SETUP_DIR/_dependencies/*; do
    if [ -r "\$file" ]; then
      . "\$file" $DISTRO
    fi
  done
  for file in $SETUP_DIR/_dependencies/utils/*; do
    if [ -r "\$file" ]; then
      . "\$file" $DISTRO
    fi
  done
EOF

echo "----- Successfully installed dependencies:" | tee -a $SETUP_LOG 2>&1
for file in $MARKER_DIR/*; do
  if [ -r "\$file" ]; then
    echo "  - $(basename \$file)"
  fi
done

# Bars
zsh $SETUP_DIR/_kek/butHesNotaRapper

# Remove default zshrc, stow shell configs and run first time init
[ -f "$HOME/.zshrc" ] && sudo rm $HOME/.zshrc
cd $HOME/.dotfiles && stow . && exec zsh